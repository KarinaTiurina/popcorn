<div class="text-center">
  <h1><%= @user.name %></h1>

  <%= image_tag user_avatar(@user) %>

  <% if @user == current_user %>
      <p class="buffer-top"><%= link_to 'Редактировать профиль',
                                        edit_user_path(@user), class: 'btn btn-default' %></p>
  <% end %>
</div>

<div class="row">
  <div class=col-md-6>
    <% if policy(Film).get_films? %>
      <%= link_to 'Обновить фильмы', get_films_path, class: 'btn btn-primary' %>
    <% end %>

    <% if policy(Film).destroy_films? %>
      <%= link_to 'Удалить все фильмы', destroy_films_path, class: 'btn btn-danger', data: {confirm: 'Точно удалить все фильмы?'} %>
    <% end %>
  </div>
</div>

<div class="row">
  <div class="col-md-12">
    <h3>Что смотрел:</h3>
    <%= render partial: 'films/film', collection: @user.films %>
  </div>
</div>
