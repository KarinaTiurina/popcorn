<div class="row">
  <div class="col-lg-9 col-md-6 col-sm-1">
    <div class="text-center">
      <%= image_tag('kino_logo.png', :class => "logo-img") %>
    </div>
  </div>
</div>


<div class="row">
  <div class="col-lg-9">
    <div class="buffer-both">
      <form class="">
        <%= form_tag root_path, :method => :get do %>
        <div class="input-group">
          <input  type="text" class="form-control" placeholder="Поиск случайного фильма по параметрам" <%= text_field_tag :query, params[:query] %>
          <div class="input-group-btn">
            <button class="btn btn-default" type="submit">
              <i class="glyphicon glyphicon-search"></i>
            </button>
          </div>
        </div>
        <% end %>
      </form>
    </div>
    <% if @is_search %>
      <div class="row">
        <div class="col-lg-9">
          <div class="buffer-both">
            <% if @film_to_watch.present? %>
              <%= render partial: 'films/film', object: @film_to_watch %>
            <% else %>
              <p>К сожалению, фильм не найден.</p>
            <% end %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>



<h1>Фильмы</h1>

<div class="row buffer-bottom">
  <%= render partial: 'films/film', collection: @films %>
</div>


